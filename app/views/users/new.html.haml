- content_for :title do
  User create - Tarkov MAP

- if @user.errors.any?
  %ul.alert.alert-danger
    - @user.errors.full_messages.each do |message|
      %li.ms-3.mt-1.mb-1
        = message

%h2.mb-3 Create Account

.d-flex.flex-row-reverse
  = link_to "Return", root_path, class: "btn btn-success mb-3"

= form_with model: @user, method: :post, local: true, class: "mb-5" do |form|
  .mb-3
    = form.label :email, "メールアドレス", class: "mb-2"
    = form.text_field :email, class: "form-control"
  .mb-3
    = form.label :password, "パスワード", class: "mb-2"
    = form.password_field :password, class: "form-control"
  .mb-3
    = form.label :password_confirmation, "パスワード(確認用)", class: "mb-2"
    = form.password_field :password_confirmation, class: "form-control"
    -# %span.form-text.d-block.mt-1 Must be 8-20 characters long.

  = form.submit "登録する", class: "btn btn-primary"
